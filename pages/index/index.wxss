/* pages/index/index.wxss */

page {
  background: #f1f1f1;
}

.banner-block {
  height: 350rpx;
}

.banner-block .slide-image {
  width: calc(100% - 40rpx);
  height: 200rpx;
  border-radius: 8rpx;
}

.banner-block .slide-image.active {
  width: 100%;
  height: 260rpx;
}

.banner-block swiper-item {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 统计 */

.count-block {
  height: 330rpx;
}

.logo-block {
  text-align: center;
}

.logo-block image {
  width: 160rpx;
  height: 50rpx;
}

.count-tips {
  margin: 0 auto;
  padding: 12rpx 0 10rpx 0;
  width: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.count-tips::before, .count-tips::after {
  content: "";
  width: 34rpx;
  height: 1rpx;
  background: #0a6ad0;
}

.count-tips .tips-text {
  color: #0a6ad0;
  font-size: 20rpx;
}

.count-item, .count-item .count-nums {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
}

.count-item {
  color: #333;
}

.count-item .count-text {
  width: 200rpx;
}

.count-item .count-nums {
  font-size: 32rpx;
  color: #fff;
  background: #1cd9c9;
  width: 240rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 0 30rpx;
}

/* 扫一扫 */

.scan-count-block {
  
}

.scan-block {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.scan-block image {
  width: 100%;
  height: 380rpx;
}

.scan-btn {
  width: 160rpx;
  height: 60rpx;
  background: #2282e5;
  color: #fff;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx;
}

.scan-count {
  width: calc(100% - 46rpx);
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.scan-count .scan-count-item {
  width: 50%;
}

.scan-count .scan-count-item .count-title {
  color: #000;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 30rpx;
}

.count-text-block {
  margin: 40rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.count-text-block .scan-count-text {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
}

.count-text-block .scan-count-nums {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  margin:0 14rpx;
}
.anti-lost {
  background: #f7cb6d;
}
.move-car {
  background:#2ebaee;
}
